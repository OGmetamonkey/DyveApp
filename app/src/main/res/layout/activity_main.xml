<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#f2bf78"
    android:theme="@style/AppTheme">

    <Switch
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:switchMinWidth="240dp"
        android:minHeight="110dp"
        android:textOff=""
        android:textOn=""
        android:thumb="@drawable/my_button_toggle"
        android:thumbTextPadding="55dp"
        style="@style/switchStyle"
        android:layout_marginTop="100dp"
        android:rotation="90"
        android:id="@+id/icon"
        android:track="@drawable/customtrack"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        />
    <!--
    android:background="@drawable/check"
    android:layout_margin="10dp"
    android:textOn=""
    android:textOff=""
    android:focusable="false"
    android:focusableInTouchMode="false"
    -->



<ImageButton
    android:layout_width="85dp"
    android:layout_height="85dp"
    android:id="@+id/people"
    android:scaleType="fitXY"
    android:background="#00000000"
    android:src="@drawable/people"
    android:layout_below="@+id/icon"
    android:layout_marginTop="85dp"
    android:layout_centerHorizontal="true"
    />

<ImageButton
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:id="@+id/ring"
    android:scaleType="fitXY"
    android:background="#00000000"
    android:src="@drawable/ring"
    android:layout_below="@+id/people"

    android:layout_toStartOf="@+id/people"
    />

<ImageButton
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:id="@+id/vibrate"
    android:scaleType="fitXY"
    android:background="#00000000"
    android:src="@drawable/vibrate"
    android:layout_below="@+id/people"

    android:layout_toEndOf="@+id/people"
    />

<ImageButton
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:id="@+id/msgButton"
    android:scaleType="fitXY"
    android:src="@drawable/buttonemerg"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="90dp"
    android:layout_marginBottom="20dp"
    android:background="#00000000"
    />

<ImageButton
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:id="@+id/msgButton2"
    android:scaleType="fitXY"
    android:src="@drawable/buttonnormal"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="90dp"
    android:layout_marginBottom="20dp"
    android:background="#00000000"
    />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/help"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:src="@drawable/ic_help_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/info"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:src="@drawable/ic_info_black_24dp"
        android:layout_alignParentBottom="true"

        />


</RelativeLayout>

